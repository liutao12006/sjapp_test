<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Actionbar color -->
        <item name="colorPrimary">@color/toolbar_color</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/gray_white</item>
        <!-- toolbar的menu字体大小 -->
        <item name="android:textSize">@dimen/medium_text_size</item>

    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- 标题titile字体颜色 -->
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="home_tab_bottom">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">-1dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="cart_checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_cart_selector</item>
        <item name="android:paddingLeft">@dimen/app_margin</item>
    </style>

    <style name="customProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item><!-- dim:模糊的 阴影效果 -->
        <item name="android:background">@drawable/load_back</item>

    </style>

    <style name="DefaultTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
    </style>
    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DefaultLineStyleY">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#d1d1d1</item>
    </style>
    <style name="UserMenuStyle">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">@dimen/app_margin</item>
    </style>
    <style name="DefaultLineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:background">#d1d1d1</item>
    </style>


    <!-- 自定义RatingBar大小 -->
    <style name="My_RatingBar" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">23dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
