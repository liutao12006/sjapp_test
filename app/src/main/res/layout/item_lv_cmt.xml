<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/msg_cmt_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/user_head"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/app_margin"
            android:contentDescription="@string/app_pic"/>
        <TextView
            android:id="@+id/msg_cmt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某某某"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:layout_alignTop="@+id/msg_cmt_img"
            android:layout_toRightOf="@+id/msg_cmt_img"
            android:layout_toEndOf="@+id/msg_cmt_img"
            />
        <TextView
            android:id="@+id/msg_cmt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-03-30"
            android:textSize="@dimen/small_text_size"
            android:layout_alignBottom="@+id/msg_cmt_img"
            android:layout_alignLeft="@+id/msg_cmt_name"
            android:layout_alignStart="@+id/msg_cmt_name"
            android:layout_marginBottom="@dimen/app_margin_small"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/msg_cmt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="谢谢嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻"
        android:padding="@dimen/app_margin_small"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:textSize="@dimen/small_text_size"/>

</LinearLayout>