<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/app_margin">

    <TextView
        android:id="@+id/item_pp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称名称"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/app_margin_small"/>

    <TextView
        android:id="@+id/item_pp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxx"
        android:textSize="@dimen/small_middle_text_size"
        android:layout_below="@+id/item_pp_name"
        android:layout_alignLeft="@+id/item_pp_name"
        android:layout_alignStart="@+id/item_pp_name"
        android:layout_marginTop="@dimen/app_margin"/>

    <TextView
        android:id="@+id/item_pp_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务电话:13007131300"
        android:textColor="@color/font_red"
        android:textSize="@dimen/small_text_size"
        android:layout_alignTop="@+id/item_pp_txt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>