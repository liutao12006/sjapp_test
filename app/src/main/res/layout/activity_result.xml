<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_pic" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/app_margin_left"
        android:background="@color/white" >
        
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/scan_content"
	        android:layout_margin="@dimen/app_margin_left"
	        android:textStyle="bold"
	        android:textSize="@dimen/medium_text_size" />
	    <TextView
	        android:id="@+id/scan_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/app_margin_left"
	        android:layout_marginRight="@dimen/app_margin_left"
	        android:paddingLeft="@dimen/app_margin_left"
	        android:paddingRight="@dimen/app_margin_left"
	        android:textSize="@dimen/medium_text_size"
	        android:background="@drawable/textview_border" />
    </LinearLayout>
    
    
</LinearLayout>
