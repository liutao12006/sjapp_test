<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfirmOrdersActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolBarStyle"
        android:background="@color/toolbar_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认订单"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算:"/>
            <TextView
                android:id="@+id/confirm_order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:textColor="@color/font_red"/>
        </LinearLayout>
        <Button
            android:id="@+id/confirm_order_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="立即购买"
            android:textColor="@color/white"
            android:background="@color/font_red"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/linearLayout3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ads_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/right"
                android:text="请选择当前您要进行服务的小区位置"
                android:textSize="@dimen/small_middle_text_size"
                android:background="@color/white"
                android:padding="@dimen/app_margin"
                android:layout_marginTop="@dimen/app_margin"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/ads_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:padding="@dimen/app_margin"
                android:layout_marginTop="@dimen/app_margin">
                <TextView
                    android:id="@+id/item_ads_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字名字名字"
                    android:textSize="@dimen/medium_large_text_size"/>
                <TextView
                    android:id="@+id/item_ads_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13007131300"
                    android:textSize="@dimen/small_middle_text_size"
                    android:layout_toRightOf="@+id/item_ads_name"
                    android:layout_alignBottom="@+id/item_ads_name"
                    android:layout_marginLeft="@dimen/app_margin"/>
                <TextView
                    android:id="@+id/item_ads_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="默认"
                    android:textColor="@color/white"
                    android:background="@color/font_red"
                    android:padding="3dp"
                    android:textSize="@dimen/micro_small_text_size"
                    android:layout_toRightOf="@+id/item_ads_name"
                    android:layout_marginLeft="@dimen/app_margin"/>
                <TextView
                    android:id="@+id/item_ads_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sssssss"
                    android:layout_below="@+id/item_ads_name"
                    android:layout_marginTop="@dimen/app_margin_small"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_pic"/>

            </RelativeLayout>

            <wbkj.sjapp.views.CustomListView
                android:id="@+id/confirm_order_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_margin_small"
                android:background="@color/white"
                android:layout_marginTop="@dimen/app_margin">
            </wbkj.sjapp.views.CustomListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textColor="@color/black"
                    android:padding="@dimen/app_margin"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_white" />
                <EditText
                    android:id="@+id/confirm_order_ettxt"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="start"
                    android:hint="如有特殊需求请给商家留言"
                    android:textSize="@dimen/small_middle_text_size"
                    android:padding="@dimen/app_margin"
                    android:background="@null"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="@dimen/app_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="可用积分"
                    android:drawableLeft="@mipmap/view_left"
                    android:drawablePadding="@dimen/app_margin"
                    android:paddingLeft="@dimen/app_margin"/>
                <EditText
                    android:id="@+id/confirm_order_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="10"
                    android:inputType="number"
                    android:padding="@dimen/app_margin"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/app_margin"/>
                <TextView
                    android:id="@+id/confirm_order_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/micro_text_size"
                    android:layout_alignBottom="@+id/confirm_order_point"
                    android:layout_toLeftOf="@+id/confirm_order_point"
                    android:layout_toStartOf="@+id/confirm_order_point"
                    android:paddingBottom="@dimen/app_margin"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray_white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="支付方式"
                    android:drawableLeft="@mipmap/view_left"
                    android:drawablePadding="@dimen/app_margin"
                    android:paddingLeft="@dimen/app_margin"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_white" />
                <wbkj.sjapp.views.CustomListView
                    android:id="@+id/pp_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </wbkj.sjapp.views.CustomListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
