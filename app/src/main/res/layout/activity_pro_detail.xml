<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wbkj.sjapp.activity.ProDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:layout_alignParentTop="true" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/app_prod"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/white"/>
        <ImageButton
            android:id="@+id/pro_detail_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cart"
            android:layout_gravity="right"
            android:background="@null"
            android:layout_marginRight="@dimen/app_margin"
            android:contentDescription="@string/app_pic"/>
        <ImageButton
            android:id="@+id/pro_detail_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/fav_off"
            android:background="@null"
            android:padding="@dimen/app_margin_small"
            android:layout_marginRight="@dimen/app_margin_small"
            android:contentDescription="@string/app_pic" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textSize="@dimen/small_text_size"
                android:padding="@dimen/app_margin_small"/>
            <TextView
                android:id="@+id/pro_detail_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/small_middle_text_size"
                android:textColor="@color/font_red"/>
        </LinearLayout>
        <Button
            android:id="@+id/pro_detail_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:background="@mipmap/add_cart"/>
        <Button
            android:id="@+id/pro_detail_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="立即购买"
            android:textColor="@color/white"
            android:background="@mipmap/buy_btn" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <requestFocus />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear_point"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:orientation="horizontal" >
                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/index_vp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </android.support.v4.view.ViewPager>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingBottom="@dimen/app_margin_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/app_margin">
                    <TextView
                        android:id="@+id/pro_detail_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="名字名字"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text_size"/>
                    <TextView
                        android:id="@+id/pro_detail_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/star"
                        android:drawablePadding="@dimen/app_margin_small"
                        android:text="0"
                        android:textSize="@dimen/small_middle_text_size"
                        android:layout_margin="@dimen/app_margin_small"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/app_margin">
                    <TextView
                        android:id="@+id/pro_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥210"
                        android:textColor="@color/font_red"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/pro_detail_oprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥300"
                        android:textSize="@dimen/small_middle_text_size"
                        android:layout_alignTop="@+id/pro_detail_price"
                        android:layout_toRightOf="@+id/pro_detail_price"
                        android:layout_toEndOf="@+id/pro_detail_price"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/app_margin"/>
                    <TextView
                        android:id="@+id/pro_detail_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务时间:8:00-20:00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/app_margin_small"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/app_margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/pro_view"
                    android:drawablePadding="@dimen/app_margin_small"
                    android:gravity="center_vertical"
                    android:text="商品简介"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/app_margin"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_white" />
                <TextView
                    android:id="@+id/pro_detail_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="简介简介简介简介简介简介简介简介简介简介"
                    android:textSize="@dimen/small_middle_text_size"
                    android:paddingLeft="@dimen/app_margin"
                    android:paddingRight="@dimen/app_margin"
                    android:paddingTop="@dimen/app_margin_right"
                    android:paddingBottom="@dimen/app_margin_right"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_white" />
                <TextView
                    android:id="@+id/pro_detail_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/right"
                    android:text="图文详情"
                    android:textColor="@color/toolbar_color"
                    android:textSize="@dimen/small_middle_text_size"
                    android:padding="@dimen/app_margin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/app_margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/pro_view"
                    android:drawablePadding="@dimen/app_margin_small"
                    android:gravity="center_vertical"
                    android:text="商品评论"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/app_margin"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_white" />
                <wbkj.sjapp.views.CustomListView
                    android:id="@+id/pro_detail_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/app_margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/pro_view"
                    android:drawablePadding="@dimen/app_margin_small"
                    android:gravity="center_vertical"
                    android:text="其他产品"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/app_margin"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_white" />
                <wbkj.sjapp.views.CustomGridView
                    android:id="@+id/pro_detail_gv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/app_margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/pro_view"
                    android:drawablePadding="@dimen/app_margin_small"
                    android:gravity="center_vertical"
                    android:text="为你推荐"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/app_margin"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray_white" />
                <wbkj.sjapp.views.CustomGridView
                    android:id="@+id/pro_detail_gv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
