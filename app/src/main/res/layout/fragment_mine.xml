<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/TitleStyle"
        android:background="#00000000">
        <!--
        <ImageView
            android:id="@+id/user_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/user_setting"
            android:padding="@dimen/app_margin_small"
            android:contentDescription="@string/app_pic"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/user_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/user_sign"
            android:contentDescription="@string/app_pic"/>
             -->
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@mipmap/user_background">

                <ImageView
                    android:id="@+id/user_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/user_setting"
                    android:padding="@dimen/app_margin_small"
                    android:contentDescription="@string/app_pic"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/user_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/user_sign"
                    android:contentDescription="@string/app_pic"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="220dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/user_background" />
                <LinearLayout
                    android:id="@+id/user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="80dp"
                    android:layout_marginLeft="70dp"
                    android:orientation="horizontal">

                    <wbkj.sjapp.views.CircleImageView
                        android:id="@+id/user_head"
                        android:layout_width="80dp"
                        android:layout_height="75dp"
                        android:src="@mipmap/user_head" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="周小发"
                            android:textSize="@dimen/medium_text_size" />

                        <TextView
                            android:id="@+id/user_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="男"
                            android:textSize="@dimen/medium_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:layout_margin="@dimen/app_margin"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/img_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/user_1x"
                        android:contentDescription="@string/app_pic"/>
                    <TextView
                        android:id="@+id/user_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="普通会员"
                        android:layout_marginLeft="@dimen/app_margin_small"
                        android:textSize="@dimen/small_text_size"/>
                </LinearLayout>

                <Button
                    android:id="@+id/user_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@mipmap/user_count_background"
                    android:drawableRight="@mipmap/user_count"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/medium_text_size" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_set_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@mipmap/user_house"
                    android:contentDescription="@string/app_pic"/>

                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择小区"
                    android:textSize="20dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/right"
                    android:contentDescription="@string/app_pic"/>
            </LinearLayout>

            <View style="@style/DefaultLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_myorder"
                    style="@style/UserMenuStyle"
                    android:drawableTop="@mipmap/user_my_order"
                    android:text="我的订单" />

                <View style="@style/DefaultLineStyleY" />

                <TextView
                    android:id="@+id/user_shop_car"
                    style="@style/UserMenuStyle"
                    android:drawableTop="@mipmap/user_shop_car"
                    android:text="购物车" />

                <View style="@style/DefaultLineStyleY" />

                <TextView
                    android:id="@+id/user_pay_record"
                    style="@style/UserMenuStyle"
                    android:drawableTop="@mipmap/user_pay_record"
                    android:text="缴费记录" />

            </LinearLayout>

            <View style="@style/DefaultLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_my_collect"
                    style="@style/UserMenuStyle"
                    android:drawableTop="@mipmap/user_my_collect"
                    android:text="我的收藏" />

                <View style="@style/DefaultLineStyleY" />

                <TextView
                    android:id="@+id/user_notification"
                    style="@style/UserMenuStyle"
                    android:drawableTop="@mipmap/user_notification"
                    android:text="通知通告" />

                <View style="@style/DefaultLineStyleY" />

                <TextView
                    android:id="@+id/user_count_macket"
                    style="@style/UserMenuStyle"
                    android:drawableTop="@mipmap/user_count_macket"
                    android:text="积分商城" />


            </LinearLayout>

            <View style="@style/DefaultLineStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:id="@+id/user_my_share"
                    style="@style/UserMenuStyle"
                    android:drawableTop="@mipmap/share"
                    android:text="分享" />

                <View style="@style/DefaultLineStyleY" />

                <TextView
                    style="@style/UserMenuStyle"
                    android:text="" />

                <View style="@style/DefaultLineStyleY" />

                <TextView
                    style="@style/UserMenuStyle"
                    android:text="" />

            </LinearLayout>

            <View style="@style/DefaultLineStyle" />
            <TextView
                android:id="@+id/user_info_count"
                style="@style/UserMenuStyle"
                android:text="当前会员人数:3200,您的大管家尊敬的第101位会员"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>