<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    tools:context="wbkj.sjapp.activity.SecondActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="上街之窗"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/white"/>
        <ImageButton
            android:id="@+id/edit_pub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/pub"
            android:background="@null"
            android:padding="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:contentDescription="@string/app_pic"/>
    </android.support.v7.widget.Toolbar>
<!--
    <android.support.v7.widget.RecyclerView
        android:id="@+id/spro_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="@dimen/app_margin_small">
    </android.support.v7.widget.RecyclerView>
-->

    <ImageView
        android:id="@+id/shangjie_newscenter"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:onClick="onClick"
        android:src="@drawable/shangjie_new"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/port_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/app_margin_small">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/port_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_weight="1"
            android:src="@drawable/shangjie_house"/>



        <ImageView
            android:id="@+id/port_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_weight="1"
            android:src="@drawable/shangjie_car"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/port_xiaohua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/shangjie_xiaohua"/>


        <ImageView
            android:id="@+id/port_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:src="@drawable/shangjie_search"/>
    </LinearLayout>
</LinearLayout>
