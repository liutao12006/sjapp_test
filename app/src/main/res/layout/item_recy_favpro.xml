<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/pro_fav_img"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/app_margin"
        android:contentDescription="@string/app_pic"/>

    <TextView
        android:id="@+id/pro_fav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxx"
        android:layout_toRightOf="@+id/pro_fav_img"
        android:layout_alignTop="@+id/pro_fav_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pro_fav_price"
        android:text="￥120"
        android:textSize="@dimen/small_middle_text_size"
        android:textColor="@color/font_red"
        android:layout_toRightOf="@+id/pro_fav_img"
        android:layout_below="@+id/pro_fav_name"
        android:layout_marginTop="@dimen/app_margin"/>

    <TextView
        android:id="@+id/pro_fav_oprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        android:textSize="@dimen/small_middle_text_size"
        android:layout_toRightOf="@+id/pro_fav_img"
        android:layout_alignBottom="@+id/pro_fav_img"/>

</RelativeLayout>