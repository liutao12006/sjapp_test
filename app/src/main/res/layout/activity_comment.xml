<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolBarStyle"
        android:background="@color/toolbar_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价"
            android:textSize="@dimen/medium_text_size"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cmt_pro_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/demo"
            android:layout_margin="@dimen/app_margin"
            android:contentDescription="@string/app_pic"/>
        <EditText
            android:id="@+id/cmt_et_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="请写下对宝贝的感受吧"
            android:gravity="start"
            android:background="@null"
            android:textSize="@dimen/small_middle_text_size"
            android:padding="@dimen/app_margin"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/app_margin"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务评价"
            android:textSize="@dimen/small_middle_text_size"
            android:padding="@dimen/app_margin"
            android:layout_gravity="center_vertical"/>
        <RatingBar
            android:id="@+id/cmt_rating_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/My_RatingBar"
            android:numStars="5"
            android:progressDrawable="@drawable/rating_bar"
            android:layout_marginRight="@dimen/app_margin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品评价"
            android:textSize="@dimen/small_middle_text_size"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/app_margin" />
        <RatingBar
            android:id="@+id/cmt_rating_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/My_RatingBar"
            android:numStars="5"
            android:progressDrawable="@drawable/rating_bar"
            android:layout_marginRight="@dimen/app_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="综合评价"
            android:textSize="@dimen/small_middle_text_size"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/app_margin" />
        <RatingBar
            android:id="@+id/cmt_rating_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/My_RatingBar"
            android:numStars="5"
            android:progressDrawable="@drawable/rating_bar"
            android:layout_marginRight="@dimen/app_margin"/>
    </LinearLayout>

    <Button
        android:id="@+id/comment_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textColor="@color/white"
        android:background="@mipmap/login_btn_back"
        android:layout_margin="@dimen/app_margin" />

</LinearLayout>
