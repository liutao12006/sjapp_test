<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/app_margin_small">

    <ImageView
        android:id="@+id/item_pro_img"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:src="@mipmap/user_house"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_pic"/>

    <TextView
        android:id="@+id/item_pro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_middle_text_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="名称名称"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_pro_img"
        android:layout_marginLeft="@dimen/app_margin_small" />
    <TextView
        android:id="@+id/item_pro_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="描述描述"
        android:textSize="@dimen/small_text_size"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/item_pro_name"
        android:layout_alignLeft="@+id/item_pro_name"
        android:layout_alignStart="@+id/item_pro_name"
        android:layout_marginTop="@dimen/app_margin_small"/>

    <TextView
        android:id="@+id/item_pro_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥30元/小时"
        android:textSize="@dimen/small_text_size"
        android:layout_below="@+id/item_pro_desc"
        android:layout_alignLeft="@+id/item_pro_desc"
        android:layout_alignStart="@+id/item_pro_desc"
        android:layout_marginTop="@dimen/app_margin"/>

    <TextView
        android:id="@+id/item_pro_oldp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        android:textSize="@dimen/small_text_size"
        android:layout_alignTop="@+id/item_pro_price"
        android:layout_toRightOf="@+id/item_pro_price"
        android:layout_toEndOf="@+id/item_pro_price"
        android:layout_marginLeft="@dimen/app_margin_small"/>

    <TextView
        android:id="@+id/item_pro_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/small_text_size"
        android:layout_alignTop="@+id/item_pro_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/item_pro_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/micro_text_size"
        android:layout_below="@+id/item_pro_oldp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>